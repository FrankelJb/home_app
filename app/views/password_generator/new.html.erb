<% provide(:title, "Generate Password") %>
<h1>Generate Password</h1>

<%= form_for :password, url: password_generator_path,
		remote: true, html: { class: "form-horizontal" } do |f| %>

    <fieldset>
      <legend>Password parameters</legend>
      <div class="control-group">
        <label class="control-label" for="password_word_count">Word count</label>
        <div class="controls">
					<%= f.select :word_count, 1..5 %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="password_camel_case">Camel Case</label>
				<div class="controls">
	        <label class="checkbox">
						<%= f.check_box :camel_case %>
					</label>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="password_common_substitutions">Common Substitutions</label>
				<div class="controls">
	        <label class="checkbox">
						<%= f.check_box :common_substitutions %>
					</label>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="password_keep_spaces">Keep Spaces</label>
				<div class="controls">
	        <label class="checkbox">
						<%= f.check_box :keep_spaces %>
					</label>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="password_dictionary_words">Dictionary Words</label>
				<div class="controls">
	        <label class="checkbox">
						<%= f.check_box :dictionary_words %>
					</label>
				</div>
			</div>


      <div class="form-actions">
				<%= f.submit "Generate", class: "btn btn-primary" %>
      </div>

      <label class="control-label" for="input01">Text input</label>  
          <div class="controls">  
            <input type="text" class="input-xlarge" id="input01">  
            <p class="help-block">In addition to freeform text, any HTML5 text-based input appears like so.</p>  
          </div>  
    </fieldset>
<% end %>